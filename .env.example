# Python Backend Environment Variables
# Copy these values from your main Format-A application environment

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_URL=postgresql://username:password@host:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NO_SSL=postgresql://username:password@host:port/database?sslmode=disable
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database?pgbouncer=false
POSTGRES_USER=your_postgres_user
POSTGRES_HOST=your_postgres_host
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=your_postgres_database

# Authentication Configuration
JWT_SECRET=your-jwt-secret-key-must-match-main-app
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# Email Configuration (if needed for document generation)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-app-password

# Environment
NODE_ENV=production
VERCEL_URL=https://format-a-python.vercel.app

# Optional: Custom domain
CUSTOM_DOMAIN=your-custom-python-domain.com

# CORS Configuration (automatically handled by vercel.json)
ALLOWED_ORIGINS=https://format-a.vercel.app,http://localhost:3000,http://localhost:5173

# PDF Service Configuration
# URL of the standalone PDF conversion service (Railway/Render)
PDF_SERVICE_URL=https://your-pdf-service.railway.app
# Timeout for PDF conversion requests in seconds (default: 30)
PDF_SERVICE_TIMEOUT=30
# Enable/disable PDF service integration (default: true)
# Set to 'false' to always use direct conversion fallback
USE_PDF_SERVICE=true